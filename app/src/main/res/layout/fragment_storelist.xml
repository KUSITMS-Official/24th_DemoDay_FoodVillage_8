<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".storeList.StoreListActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lly_home_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_home_alarm"
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/top_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:gravity="center_horizontal|top"
            android:text="신림로 71길 18"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_home_alarm"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_more"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/top_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_home_location"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="16dp"
            android:layout_height="16.05dp"
            android:layout_marginStart="33dp"
            android:background="@drawable/top_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_more"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_map"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/top_map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_search"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/hsv_category"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lly_home_bar"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/top_category_btn_design"
                android:text="모든 가게"
                android:textColor="@color/main_green"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_fruit_vegi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="과일/채소"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="고기/계란"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_seafood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="수산/건어물"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_side_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="반찬/간편식"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_snack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="간식/음료"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_rice_and_noodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="밥/면/소스/캔"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_healthy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="건강/다이어트"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/top_category_btn_design"
                android:text="생활용품"
                android:textColor="@color/main_green"
                android:textSize="13sp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <Button
        android:id="@+id/btn_category_more"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/category_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hsv_category"
        app:layout_constraintTop_toBottomOf="@+id/lly_home_bar" />


    <!--    <nl.joery.animatedbottombar.AnimatedBottomBar-->
<!--        android:id="@+id/bottom_navigation"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="56dp"-->
